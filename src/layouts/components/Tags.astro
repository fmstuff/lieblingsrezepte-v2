---
import { slugify, humanize } from "@lib/utils/textConverter";
import { BiPurchaseTagAlt } from "react-icons/bi";
import config from "@config/config.json";

const base_path = config.site.base_path;

export interface Props {
  tags: string[];
}

const { tags } = Astro.props as Props;
---

<BiPurchaseTagAlt className="mr-1 h-[18px] w-[18px] text-gray-600" />
<>
  <ul>
    {
      tags.map((tag: string, i: number) => (
        <li class="inline-block">
          <a
            href={`${base_path}/tags/${slugify(tag)}`}
            class="mr-2 font-medium hover:text-primary"
          >
            {humanize(tag)}
            {i !== tags.length - 1 && ","}
          </a>
        </li>
      ))
    }
  </ul>
</>
